<style>
    .card-body button {
        color: white;
        background-color: #940031;
    }

    .card-body button:hover {
        background-color: white;
        color: #940031;
    }

    .card-body .editButton {
        background-color: white;
        color: #940031;
    }
</style>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <!-- <img src="<%- user.PROFILE_PICTURE%>" alt="profile-picture" class="rounded-circle img-fluid"
                            style="width: 150px;"> -->
                        <h5 class="my-3"> <%= user.name %> </h5>
                        <div class="d-flex justify content-center" style="padding-left: 85px;">
                            <p class="text-muted mb-1">
                                Department: <%= user.department %> <br /> Level: <%= user.level %> / Term : <%= user.term %> <br />
                                            Degree: <%= user.degree %>
                            </p><br />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Full Name</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">
                                            <%= user.name %>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Email</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">
                                            <%= user.email %>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <p class="mb-0">Address</p>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">
                                            <%= user.address_info %>,
                                            <%= user.district %>
                                        </p>
                                    </div>
                                </div>
                                <hr>
                                <%if (user.PHONE !==null) {%>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Phone No.</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">
                                                <%= user.phone%>
                                            </p>
                                        </div>
                                    </div>
                                    <hr>
                                    <% }%>     
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Residency Status:</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">
                                                <%= user.residency_status%>
                                            </p>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <p class="mb-0">Student ID</p>
                                        </div>
                                        <div class="col-sm-9">
                                            <p class="text-muted mb-0">
                                                <%= user.id%>
                                            </p>
                                        </div>
                                    </div>
                    </div>
                </div>
            </div>
            <h5>Additional Information</h5>
            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-body" id="additional_info">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    let user = <%- JSON.stringify(user) %>;
    $(document).ready(function () {
    $.ajax({
            method: "GET",
            url: `/api/student/additional_info/${user.id}`,
            dataType: "json",
            success: function (result) {
                    console.log(result.father_name);
                    $('#additional_info').append(
                        `<div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Father's Name: </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    ${result.father_name}
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Father's Phone No.: </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    ${result.father_phone}
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mother's Name: </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    ${result.mother_name}
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Mother's Phone No.: </p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">
                                    ${result.mother_phone}
                                </p>
                            </div>
                        </div>`)
            }
        })
    });
</script>