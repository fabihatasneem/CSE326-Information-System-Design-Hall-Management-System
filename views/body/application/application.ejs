<style>
    .card-body button {
        color: white;
        background-color: #940031;
    }

    .card-body button:hover {
        background-color: white;
        color: #940031;
    }

    .card-body .editButton {
        background-color: white;
        color: #940031;
    }
    .login_btn{
    color: rgb(255, 255, 255);
    background-color: #940031;
    width: 100px;
    }

    .login_btn:hover{
    color: #940031;
    background-color: white;
    }

</style>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="d-flex justify-content-center h-100">
            <div class="card" style="width: 800px">
                <div class="card-header">
                    <h3 style="text-align: center;">Room Allocation Application</h3>
                    <div class="card-body">
                        <form action="/api/application/submit" method="post">
                            <div class="input-group form-group">
                                <input type="text" class="form-control" id="first_name" name="first_name"
                                    placeholder="First Name *" required
                                    value="<%= (typeof form != 'undefined')? form.first_name : '' %>">
                            </div>
                            <div class="input-group form-group">
                                <input type="text" class="form-control" id="last_name" name="last_name"
                                    placeholder="Last Name *" required
                                    value="<%= (typeof form != 'undefined')? form.last_name : '' %>">
                            </div>
        
                            
                            <div class="input-group form-group">
                                <input type="text" class="form-control" id="city" name="city" placeholder="City *" required
                                    value="<%= (typeof form != 'undefined')? form.city : '' %>">
                            </div>
        
                            <div class="input-group form-group">
                                <input type="text" class="form-control" id="country" name="country" placeholder="Country *"
                                    required value="<%= (typeof form != 'undefined')? form.country : '' %>">
                            </div>
        
                            <div class="input-group form-group">
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email Address *"
                                    required value="<%= (typeof form != 'undefined')? form.email : '' %>">
                            </div>
        
                            <div class="input-group form-group">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password (atleast 8 characters long) *" required minlength="8"
                                    value="<%= (typeof form != 'undefined')? form.password : '' %>">
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Register" class="btn float-right login_btn">
                            </div>
                        </form>
                    </div>
                </div>
        
            </div>
        </div>
    </div>
</section>